#include "stdio.h"

int determina_tamanho()
{
  printf("Insira um número inteiro correspondente ao tamando do array desejado\n");
  int n;
  scanf("%d", &n);
  return n;
}

void preenche_vetor(int n, int *a)
{
  for(int i = 0; i < n; i++)
  {
    printf("Insira o %dº elemento", i+1);
    int arrayAux;
    scanf("%d", &arrayAux);
    *(a+n) = arrayAux;
  }
}

float media(int n, int *a)
{
  int soma = 0;
  for(int i = 0; i < n; i++)
  {
    soma += *(a+n);
  }
  float media = soma/n;
  return media;
}

int main(void) {
  float *a = (float*)malloc(sizeof(float));
  int n = determina_tamanho();
  preenche_vetor(n, &a);
  float m = media(n, &a);
  printf("A media é %lf", m);
  return 0;
}
